# ================================
# CONFIGURAÇÃO GERAL DO SISTEMA
# ================================

# Ambiente de execução
NODE_ENV=production
PORT=3000

# ================================
# CONFIGURAÇÃO DO BANCO DE DADOS
# ================================

# MySQL (Banco Principal)
DB_HOST=mysql
DB_PORT=3306
DB_ROOT_PASSWORD=rootpassword123
DB_NAME=gerenciador_financeiro
DB_USER=gf_user
DB_PASSWORD=gf_password123

# Para conexão da API (usar DB_USER/DB_PASSWORD)
DB_USERNAME=gf_user
DB_DATABASE=gerenciador_financeiro

# MongoDB (Logs e Analytics)  
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=adminpassword123
MONGO_DB=gerenciador_logs
MONGO_URI=mongodb://admin:adminpassword123@mongodb:27017/gerenciador_logs?authSource=admin

# ================================
# CONFIGURAÇÃO JWT
# ================================

# Chaves JWT (ALTERAR EM PRODUÇÃO!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-in-production-min-32-chars

# Tempo de expiração
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ================================
# CONFIGURAÇÃO DE SEGURANÇA
# ================================

# CORS Origins (separado por vírgula)
CORS_ORIGIN=http://localhost
CORS_ORIGINS=http://localhost,http://localhost:80,http://localhost:4200

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Hash rounds para bcrypt
BCRYPT_ROUNDS=12

# ================================
# CONFIGURAÇÃO DE FEATURES
# ================================

# Habilitar Swagger (apenas desenvolvimento)
ENABLE_SWAGGER=false

# Logging level
LOG_LEVEL=info

# Habilitar logs detalhados
ENABLE_DETAILED_LOGS=true

# ================================
# CONFIGURAÇÃO ESPECÍFICA DOCKER
# ================================

# Timezone
TZ=America/Sao_Paulo

# User IDs para containers
PUID=1001
PGID=1001

# ================================
# CONFIGURAÇÃO DE MONITORAMENTO
# ================================

# Health Check
HEALTH_CHECK_ENABLED=true

# ================================
# OBSERVAÇÕES IMPORTANTES
# ================================

# 1. SEMPRE altere as senhas padrão em produção!
# 2. Mantenha as chaves JWT seguras e rotacione regularmente
# 3. Use HTTPS em produção
# 4. Configure backup do banco de dados
# 5. Monitore logs e métricas regularmente

# ================================
# EXEMPLO DE USO
# ================================

# Para usar este arquivo:
# 1. Copie para .env na raiz do projeto: cp .env.example .env
# 2. Edite as variáveis conforme sua necessidade
# 3. Execute: docker-compose up -d